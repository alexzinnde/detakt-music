{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "noImplicitAny": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "pretty": true,
    "noUnusedLocals": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "index.ts"]
}
